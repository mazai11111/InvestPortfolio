<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pastel_orange"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">

        <!-- Левые элементы, например, картинка и имя -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_asset"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:src="@drawable/btc" />

            <TextView
                android:id="@+id/name_full_asset"
                android:layout_width="148dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Доллар к рублю"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="vertical">

        <!-- Правые элементы, например, текущая цена и процент прибыли -->

        <TextView
            android:id="@+id/current_prise_asset"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:scaleX="1"
            android:text="91,7 ₽"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|top|end"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/profitability_percent_asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:text="1,7%"
            android:textAlignment="viewStart"
            android:textColor="#00CC0C"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sum_profit_asset"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:scaleX="1"
            android:text="+3,20₽"
            android:textAlignment="textEnd"
            android:textColor="#00CC0C"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profitability_percent_asset2"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:scaleX="1"
            android:text="-"
            android:textAlignment="viewStart"
            android:textColor="#00CC0C"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
